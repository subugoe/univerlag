		<entry key="3/241" value-ref="defaultWithSubjectConfiguration" />		
		<!-- Physik + Chemie -->
		<entry key="3/69" value-ref="defaultWithSubjectConfiguration" />
		<!-- Bibliotheks-, Informations- und Medienwiss -->
