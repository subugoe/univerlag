		<entry key="3/Gauss_works" value-ref="noFilterConfiguration" />
		<entry key="3/Goettingen_contributions to education research" value-ref="noFilterConfiguration" />
                <entry key="3/Goettingen_library_writings" value-ref="outOfProgramConfiguration" />
                <entry key="3/Heinberg_writings" value-ref="noFilterConfiguration" />
                <entry key="3/Heinberg_writings_continuation" value-ref="noFilterConfiguration" />
                <entry key="3/Goettingen_library_archive_writings" value-ref="noFilterConfiguration" />
                <entry key="3/361" value-ref="outOfProgramConfiguration" />
